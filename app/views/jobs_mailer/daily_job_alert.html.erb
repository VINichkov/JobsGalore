<h1>Daily Job Alert</h1>

<% @list_of_jobs.each do |job|%>
  <hr>
  <h3 style="color:#66512c"><%= link_to job.title_capitalize, job %></h3>
  <span style="color: #3c763d; "><%= link_to job.company.name, job.company%> &nbsp; - &nbsp;</span>
  <span style="color: #66512c;"><%= link_to job.location.name , local_object_url(job.location.id,Objects::JOBS.code)%></span>
  <% if not job.salary.blank? then %>
    <p><%= job.salary%></p>
  <% end %>
  <p><%=HtmlToPlainText.plain_text(job.description).squish.truncate(300, separator: ' ',omission: '') + "..." %></p>
<% end %>

<h1>Daily Job Alert</h1>

<% @list_of_jobs.each do |job|%>
  <hr style="align:left; width:375px; size:2px; color:#36E052;">
  <h3 ><%= link_to job.title_capitalize, job, style:"color:#66512c" %></h3>
  <span ><%= link_to job.company.name, job.company, style:"color: #3c763d; "%> &nbsp; - &nbsp;</span>
  <span ><%= link_to job.location.name , local_object_url(job.location.id,Objects::JOBS.code), style:"color: #66512c;"%></span>
  <% if not job.salary.blank? then %>
    <p><%= job.salary%></p>
  <% end %>
  <p><%=HtmlToPlainText.plain_text(job.description).squish.truncate(300, separator: ' ',omission: '') + "..." %></p>
<% end %>

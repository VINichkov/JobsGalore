Daily Job Alert

<% @list_of_jobs.each do |job|%>
  <%= job.title_capitalize%>
  <%= job.company%> &nbsp; - &nbsp;<%= job.location.name%>(<%= local_object_url(job.location.id,Objects::JOBS.code)%>)
  <% if not job.salary.blank? then %>
    <%= job.salary%>
  <% end %>
  <%=HtmlToPlainText.plain_text(job.description).squish.truncate(300, separator: ' ',omission: '') + "..." %>
<% end %>

.modal.fade#contact[tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true"]
  .modal-dialog
    .modal-content
      .modal-header
        button[type="button" class="close" data-dismiss="modal" aria-label="Close"]
          span[aria-hidden="true"]
            |&times;
        h4.modal-title Contact:
      .modal-body
        .container-fluid
          .row
            - @job.company.client.each do |client|
              col-lg-3.col-md-3
                - if client.photo.nil?
                  = image_tag(image_path("avatar.png"), size: "60x60", class: 'img-circle center-block', )
                - else
                  = image_tag(client.photo.thumb('300x').url, size: "60x60", class: 'img-circle center-block ')
              col-lg-9.col-md-9
                ="#{client.firstname} #{client.lastname}"
                br
                |Email:
                | &nbsp;
                a[href ="mailto:#{client.email}" ] = client.email
                br
                |Phone:
                | &nbsp;
                a[href ="tel:#{client.phone}" ] #{client.phone}
      .modal-footer
        button[type="button" class="btn btn-default" data-dismiss="modal"]
          |Close
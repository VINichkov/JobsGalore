- edit ||=false
.panel.panel-default
  div[class="panel-body #{class_extras(job)}"]
    .col-md-10
      h3
        = link_to(highlight(job.title.capitalize, Search.str_to_highlight(query)), job_highlight_view_path(id:job, text:query), class: 'text-warning')
      - if job.salary.present?
        p = job.salary
      - if job.description
        = highlight(job.description_text + "...",  Search.str_to_highlight(query))
      p
      span
        = link_to job.company.name, job.company, class: 'text-success'
        | &nbsp; - &nbsp;
      span
        = link_location(job.location.name, job.location, Objects::JOBS, class: 'text-warning')
      - if job.client == current_client || current_client&.admin? || job.company ==  current_client&.company
        span
          | &nbsp; - &nbsp;
          |Views #{job.viewed_count}
      - if current_client&.admin?
        span
          | &nbsp; - &nbsp;
          |Responded #{job.responded.count}
      span.pull-right
        a[href= apply_path(job) role= "button"  aria-disabled="true"  rel="nofollow"]
          |Apply
    .col-md-2
      - if edit && (job.client == current_client || current_client&.admin? || job.company ==  current_client&.company)
        = render 'inc/btn', object: job, option: {class:'job', type:2, edit: edit}
      - else
        .row
          .text-center.col
            = link_to(job.company.name.truncate(50, separator: " "), job.company)
          .text-center.col
            = link_to(image_bg(job.company.logo_url, "contain", "130px", "100px"), job.company)
      .row.text-center.col
        = "Posted: " +job.posted_date
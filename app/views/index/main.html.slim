      = link_to "Post new resume", new_resume_path, class: "btn btn-danger btn-block", rel: "nofollow"
      p
  .row
    .col-lg-3.col-md-3
      .well
        ul.nav.nav-list
          li.nav-header
            h4
              |Major cities
          -@main.city.each do |t|
            li.col-sm-4.col-md-12.col-lg-12
              = link_to local_object_path(t,Objects::JOBS.code)  do
                |#{t.suburb}
                span.badge[style = "float: right"]
                  |#{t.counts_jobs}

    .col-lg-9.col-md-9.hidden-sm.hidden-xs
      -cache @main.jobs do
        - if @main.jobs.present?
          .well
            ul.nav.nav-list
              li.nav-header
                h4
                  |#{@main.title}
              .col-lg-6.col-md-6
                ul.nav.nav-list
                  - @main.jobs[0..(@main.jobs.count >=5 ? 4 : @main.jobs.count - 1)].each do |job|
                    = last_job(job)
                  - else
              - if @main.jobs.count >=6

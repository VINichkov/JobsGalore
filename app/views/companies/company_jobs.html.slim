- meta_head(  title:"Jobs at #{@company.name}",
        description: "Jobs at #{@company.name}",
        keywords: @objs.blank? ? @company.keywords: @objs.pluck(:title).join(', '),
        url: jobs_at_company_path(@company),
        image: @company.logo_url)
.container
  h1 Jobs at #{@company.name}
  .col-lg-3.col-md-3.hidden-sm.hidden-xs
    .panel.panel-default
      .panel-body.text-center
        = link_to @company.name, @company
        = image_bg(@company.logo_url, "contain", "200px", "200px")
  .col-sm-9.col-md-9.col-sm-12.col-xs-12
    = render partial: 'inc/job/job_md', collection: @objs, as: :job, locals:{query: ''} if md?
    = render partial: 'inc/job/job_xs', collection: @objs, as: :job, locals:{query: ''} unless md?
.text-center
  = will_paginate_mini @objs